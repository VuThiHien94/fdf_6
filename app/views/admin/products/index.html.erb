<% provide :title, t("admin.products.allproduct") %>
<h1><%= t "admin.products.allproduct" %></h1>

<div class="row">
  <div class="center">
    <%= link_to t("admin.products.newproduct"), new_admin_product_path,
      class: "btn btn-primary btn-lg" %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "products.image" %></th>
        <th><%= t "products.name" %></th>
        <th><%= t "products.classify" %></th>
        <th><%= t "products.category" %></th>
        <th><%= t "products.pricetag" %></th>
        <th><%= t "products.quantity" %></th>
        <th><%= t "products.rating" %></th>
        <th><%= t "products.createdat" %></th>
        <th><%= t "edit" %></th>
        <th><%= t "delete" %></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to image_tag(product.image.url, alt: t("admin.products.alt"),
              width: Settings.product_img_width,
              height: Settings.product_img_height), product %>
          </td>
          <td><%= link_to product.name, product %></td>
          <td><%= product.classify %></td>
          <td><%= product.category.name %></td>
          <td><%= product.price_tag %></td>
          <td><%= product.quantity %></td>
          <td><%= product.rating %></td>
          <td><%= product.created_at %></td>
          <td><%= link_to t(:edit), edit_admin_product_path(product),
            class: "btn btn-primary" %></td>
          <td>
            <%= link_to t(:delete), [:admin, product], method: :delete, data: {
              confirm: t("admin.products.areyousure")}, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
