<% provide :title, t("admin.products.createproduct") %>
<h1><%= t "admin.products.createproduct" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @product], html: {multipart: true} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :classify %>
      <div>
        <%= radio_button "product", "classify", "food" %>
        <%= label :classify, :food %>
        <%= radio_button "product", "classify", "drink" %>
        <%= label :classify, :drink %>
      </div>

      <div>
        <%= f.label :category %>
        <%= f.collection_select :category_id, @categories, :id, :name %>
      </div>

      <%= f.label :price_tag %>
      <%= f.number_field :price_tag, class: "form-control" %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control" %>

      <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>

      <%= f.submit t(:create), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
