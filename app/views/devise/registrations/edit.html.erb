<% provide :title, t("devise.registrations.edituser") %>
<h1><%= t "devise.registrations.edituser" %></h1>

<div class="col-md-8 col-md-offset-2">
  <%= form_for resource, as: resource_name,
    url: registration_path(resource_name), html: {method: :put} do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <i><%= t "devise.registrations.leave_blank" %></i>
      <%= f.password_field :password, class: "form-control",
        autocomplete: "off" %>
      <% if @minimum_password_length %>
        <em><%= t "devise.registrations.minimum_password_length",
          minpasslength: @minimum_password_length %></em>
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control",
        autocomplete: "off" %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password %>
      <i><%= t "devise.registrations.need_current_pass" %></i>
      <%= f.password_field :current_password, class: "form-control",
        autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.registrations.update"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3><%= t "devise.registrations.cancel_acc" %></h3>

  <p><%= t "devise.registrations.unhappy" %></p>
  <%= button_to t("devise.registrations.cancel_acc"),
    registration_path(resource_name),
    data: {confirm: t("devise.registrations.areyousure")}, method: :delete %>

  <%= link_to t("devise.registrations.back"), :back %>
</div>
