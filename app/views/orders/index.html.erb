<div class="col-md-8 col-md-offset-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "order.id" %></th>
        <th><%= t "order.total" %></th>
        <th><%= t "order.payment" %></th>
        <th><%= t "order.status" %></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.id, order %></td>
          <td><%= number_to_currency order.total_pay %></td>
          <td><%= order.payment %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
