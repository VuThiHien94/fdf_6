<div id="product-<%= product.id %>">
  <div class="picture">
    <%= link_to image_tag(product.image.url),
      product_path(product) if product.image? %>
  </div>
  <div class="product-name">
    <%= link_to product.name, product_path(product) %>
  </div>
  <%= product.category.name %>
  <div class="rate">
    <%= t :rating %>
    <%= product.rating %>
  </div>
  <%= t :price %>
  <%= product.price_tag %>
  <%= t :quantity %>
  <%= product.quantity %>
  <%= social_share_button_tag product.name,
    url: "http://fdf_6.com/products/#{product.id}" %>
</div>
