<%= link_to product_path product do %>
  <div id="product-<%= product.id %>">
    <div class="picture">
      <%= image_tag product.image.url if product.image? %>
    </div>
    <div class="product-name">
      <%= product.name %>
    </div>
    <%= product.category.name %>
    <div class="rate">
      <%= t :rating %>
      <%= product.rating %>
    </div>
    <%= t :price %>
    <%= product.price_tag %>
    <%= t :quantity %>
    <%= product.quantity %>
  </div>
<% end %>
